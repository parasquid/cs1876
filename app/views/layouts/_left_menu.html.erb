<div class='box' style='position: fixed; width: 287px;'>
  <div class='box-title'>
    Search
  </div>
  <div class='box-content'>
    <%= form_for (session[:search] || Search.new), url: '/properties/search', method: :get do |f| %>
      <div>
        <%= f.label :keywords %>
        <%= f.text_field :keywords %>
      </div>
      <div>
        <%= f.label :type %>
        <%= f.select :type, ["All Property Types"] + PROPERTY_TYPES, {}, {multiple: true, size: PROPERTY_TYPES.count + 1, style: 'width: 100%;'} %>
      </div>
      <div style="float: left; width: 48%">
        <%= f.label :min_beds %>
        <%= f.select :min_beds, 0..5, {}, {style: 'width: 100%;'} %>
      </div>
      <div style="float: right; width: 48%">
        <%= f.label :max_beds %>
        <%= f.select :max_beds, 0..5, {selected: session[:search].max_beds || 5}, {style: 'width: 100%;'} %>
      </div>
      <%= f.submit 'Search' %>
    <% end %>
  </div>
</div>
