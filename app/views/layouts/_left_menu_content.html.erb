  </div>
  <div style="float: right; width: 48%">
    <%= f.label :max_car_spaces %>
    <%= f.select :max_car_spaces, 0..5, {selected: @search.max_car_spaces || MAX_CAR_SPACES}, {style: 'width: 100%;'} %>
  </div>
</div>
