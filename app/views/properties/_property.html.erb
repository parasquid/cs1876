  <div class="box">
    <div class="box-title">
      <%= property.address %>
    </div>
    <div class="box-content nopadding" %>
      <div class="row-fluid nopadding">
        <div class="span8" style="margin: 0; height: 270px; overflow: hidden;">
          <%= image_tag property.images_string.split(',').first, style: 'width: 100%; height: 100%' %>
        </div>
        <div class="span4" style="margin: 18px 0 0 10px">
          <div style="margin: 0 10px 0 0">
            <div class="price"><h4><%= number_to_currency property.price %></h4></div>
            <p>
              <%= property.type %><br />
              <%= beds(property.beds) %> <%= baths(property.bathrooms) %>  <%= cars(property.car_spaces) %>
            </p>
            <h4><%= property.desc_title %></h4>
            <%= truncate property.desc_body, length: 170 %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
